<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_criteria_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ka.ti.asma.univ8.notemyday.Activity.CriteriaDayActivity"
    tools:showIn="@layout/activity_criteria_day">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_critiria_day"
        android:layout_marginTop="60dp"
        android:hint="Description"
        android:maxLines="10"
        android:maxLength="200"
        android:textStyle="bold"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBare_critiria_day"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText_critiria_day"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sauevgarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_new_criteria_day_deleteButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/activity_new_criteria_day_saveButton"/>

    <Button
        android:text="Supprimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_new_criteria_day_cancelButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/activity_new_criteria_day_deleteButton"/>

    <Button
        android:text="Annuler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_new_criteria_day_cancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

</RelativeLayout>
